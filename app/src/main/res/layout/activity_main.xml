<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg_mainacitivity"
    tools:context=".MainActivity">

    <include
        android:id="@+id/xToolBar"
        layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/xForecastDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/xWeatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="TODO"
        android:src="@drawable/weather_na"/>

    <TextView
        android:id="@+id/xTemperatureCurrent"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xForecastDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-86dp"

        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/xTemperatureMin"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/xTemperatureCurrent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xTemperatureMax"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/xTemperatureMin"
        android:layout_alignStart="@+id/xTemperatureMin"
        android:layout_below="@+id/xTemperatureMin"

        android:textSize="12sp" />

    <TextView
        android:id="@+id/xWindSpeed"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/xTemperatureMin"
        android:layout_alignStart="@+id/xTemperatureMin"
        android:layout_below="@+id/xTemperatureMax"

        android:textSize="12sp" />

    <TextView
        android:id="@+id/xCurrentLocation"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        />

</RelativeLayout>