<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg_mainacitivity"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.constraint.ConstraintLayout>

    <include
        android:id="@+id/xToolBar"
        layout="@layout/toolbar"
        />

    <TextView
        android:id="@+id/xForecastDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="192dp"
        android:text="Forecast Description"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/xWeatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xForecastDescription"
        android:layout_alignParentStart="true"
        android:contentDescription="TODO"
        android:src="@drawable/weather_na"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/xTemperatureCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xForecastDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-192dp"
        android:text="Temperature"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/xTemperatureMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xTemperatureMax"
        android:layout_toStartOf="@+id/xForecastDescription"
        android:text="Temperature Min"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/xForecastDescription" />

    <TextView
        android:id="@+id/xTemperatureMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/xWindSpeed"

        android:layout_marginBottom="130dp"
        android:text="Temperature Max"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/xWindSpeed" />

    <TextView
        android:id="@+id/xWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignStart="@+id/xTemperatureMin"
        android:layout_marginBottom="115dp"
        android:text="Wind Speed"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/xTemperatureMin" />

    <TextView
        android:id="@+id/xCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xToolBar"
        android:layout_centerHorizontal="true"
        android:text="Location"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</RelativeLayout>