<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="184dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

        <TextView
            android:id="@+id/current_wind_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="40sp"
            tools:text="ICON" />

        <TextView
            android:id="@+id/current_wind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/current_wind_icon"
            android:layout_toRightOf="@id/current_wind_icon"
            tools:text="Wind" />

        <TextView
            android:id="@+id/current_wind_value"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/current_wind_label"
            android:layout_alignStart="@id/current_wind_label"
            android:layout_alignLeft="@id/current_wind_label"
            android:layout_alignBottom="@id/current_wind_icon"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            tools:text="5km/h" />
    </RelativeLayout>

